<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<GridPane prefHeight="150.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.mmj.eevhe.gui.ChooserController">

    <Text text="What would you like to do?" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="1">
        <font>
            <Font size="22.0"/>
        </font>
    </Text>

    <Text text="Do you want to cast a vote in an ongoing election?"
          GridPane.columnIndex="1"
          GridPane.columnSpan="1"
          GridPane.rowIndex="2">
    </Text>

    <Text text="Do you want to retrieve the result of a finished election?"
          GridPane.columnIndex="1"
          GridPane.columnSpan="1"
          GridPane.rowIndex="3">
    </Text>

    <Text text="Do you want to configure your own election?"
          GridPane.columnIndex="1"
          GridPane.columnSpan="1"
          GridPane.rowIndex="4">
    </Text>

    <Button fx:id="voteButton"
            defaultButton="true"
            GridPane.columnIndex="3"
            GridPane.halignment="CENTER"
            GridPane.rowIndex="2"
            GridPane.valignment="CENTER">
        Vote
    </Button>

    <Button fx:id="fetchButton"
            GridPane.columnIndex="3"
            GridPane.halignment="CENTER"
            GridPane.rowIndex="3"
            GridPane.valignment="CENTER">
        Get results
    </Button>

    <Button fx:id="configureButton"
            GridPane.columnIndex="3"
            GridPane.halignment="CENTER"
            GridPane.rowIndex="4"
            GridPane.valignment="CENTER">
        Configure
    </Button>

    <columnConstraints>
        <ColumnConstraints percentWidth="5"/>
        <ColumnConstraints percentWidth="60"/>
        <ColumnConstraints percentWidth="10"/>
        <ColumnConstraints percentWidth="15"/>
        <ColumnConstraints percentWidth="5"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints percentHeight="10"/>
        <RowConstraints percentHeight="20"/>
        <RowConstraints percentHeight="20"/>
        <RowConstraints percentHeight="20"/>
        <RowConstraints percentHeight="20"/>
        <RowConstraints percentHeight="10"/>
    </rowConstraints>


</GridPane>
